    <title>Change Password</title>

    <!-- Bootstrap core CSS -->
    <link href="{{url_for('static',filename='bootstrap/css/bootstrap.min.css')}}" rel="stylesheet">
    <script src="{{url_for('static',filename='bootstrap/js/jquery.min.js')}}"></script>


    <style>
      html,
      body {
          height: 100%;
      }

      body {
          display: -ms-flexbox;
          display: flex;
          -ms-flex-align: center;
          align-items: center;
          padding-top: 40px;
          padding-bottom: 40px;
          background-color: #f5f5f5;
      }

      .form-signin {
          width: 100%;
          max-width: 330px;
          padding: 15px;
          margin: auto;
      }

      .form-signin .checkbox {
          font-weight: 400;
      }

      .form-signin .form-control {
          position: relative;
          box-sizing: border-box;
          height: auto;
          padding: 10px;
          font-size: 16px;
      }

      .form-signin .form-control:focus {
          z-index: 2;
      }

      .form-signin input[type="email"] {
          margin-bottom: -1px;
          border-bottom-right-radius: 0;
          border-bottom-left-radius: 0;
      }

      .form-signin input[type="password"] {
          margin-bottom: 10px;
          border-top-left-radius: 0;
          border-top-right-radius: 0;
      }

    </style>





  </head>

  <body class="text-center">
    <form id ="cpform" class="form-signin" method='post' action="{{url_for('ChangePassword_PostForm')}}">
      {{ cpform.hidden_tag() }}

      <h1 class="h3 mb-3 font-weight-normal">Change Password</h1>

      <label for="inputPassword" class="sr-only">New Password</label>
      {{cpform.password( id="inputNewPassword" ,class="form-control" ,placeholder="New Password" )}}

      <label for="inputPassword" class="sr-only">Confirm</label>
      {{cpform.confirm( id="inputConfirmPassword" ,class="form-control" ,placeholder="Confirm" )}}

      <button type='submit' class="btn btn-lg btn-primary btn-block" >submit</button>
    </form>




<script>
function checklogin() {
